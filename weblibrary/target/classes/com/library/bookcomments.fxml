<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.TextFieldListCell?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?> <!-- Add the ComboBox import -->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.CommentsBook">
    <children>
        <Label text="Comment View" />
        
        <!-- Wrap the ListView inside a ScrollPane for scrolling -->
        <ScrollPane>
            <content>
                <VBox spacing="10">
                <children>
                    <Label fx:id="commentLabel" text="No comments found for this book" />
                    <ListView fx:id="commentListView" prefWidth="400"/>
                </children >
                </VBox>
            </content>
        </ScrollPane>

        <Button fx:id="backbutton" text="Return Back" onAction="#switchBack" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>