<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.Controllers.DetailsBookAdmin">
    <children>
        <Label text="Book Details" />

        <Label text="Title:" />
        <TextField fx:id="titleField" />

        <Label text="Author:" />
        <TextField fx:id="authorField" />

        <Label text="Publication House:" />
        <TextField fx:id="pubHouseField" />

        <Label text="ISBN:" />
        <TextField fx:id="isbnField" />

        <Label text="Publication Date:" />
        <TextField fx:id="pubDateField" />

        <Label text="Category:" />
        <ComboBox fx:id="categoryComboBox" prefWidth="200" promptText="Select or type a category"/>

        <Button fx:id="saveChangesButton" text="Save Changes" onAction="#saveChanges" />
        <Label fx:id="messageLabel" />
        <Button text="Return Back" onAction="#switchBack" />
    </children>
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
    </padding>
</VBox>